{% extends "LoginCidadaoCoreBundle:Admin:base.html.twig" %}
{% block content %}
{% form_theme form 'LoginCidadaoCoreBundle::Form/fields.html.twig' %}
<div id="suggestion_id" class="content">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">{{ 'admin.person.list.title'|trans }}</h2>
        </div>
        <div class="panel-body">
            <div class="row clearfix">
                <div class="col-md-12">
                {{ form_start(form, {'action': path('lc_admin_person_grid'), 'attr': {'role':'form' , 'class' : 'form-ajax', 'ajax-target' : '#ajax-result' }}) }}
                {{ form_errors(form) }}
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.username) }}
                            <button type="submit" class="btn btn-success pull-right">{{ 'Search'|trans }}</button>
                        </div>
                    </div>
                 {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div id="ajax-result"></div>
</div>
{% endblock %}