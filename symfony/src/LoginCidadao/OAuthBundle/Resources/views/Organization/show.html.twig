{% extends "LoginCidadaoCoreBundle::base.loggedIn.html.twig" %}

{% block title %}{{ 'organizations.page.title' | trans }} | {{ parent() }}{% endblock title %}

{% block content %}
    <div class="content organizations">

        <h1 class="visible-xs">{{ 'organizations.show.title' | trans({'%name%': organization.name|e }) }}</h1>

        <div class="form-content">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">
                        {{ 'organizations.show.title' | trans({'%name%': organization.name|e }) }}
                    </h4>
                </div>

                <div class="panel-body">
                    <dl>
                        <dt>{{ 'organizations.form.name.label' | trans }}
                        <dd>{{ organization.name }}</dd>

                        <dt>{{ 'organizations.form.domain.label' | trans }}
                        <dd>{{ organization.domain }}</dd>

                        <dt>{{ 'organizations.show.services_count.label' | trans }}
                        <dd>{{ 'organizations.show.services_count.count' | transchoice(organization.clients|length) }}</dd>

                        <dt>{{ 'organizations.show.members_count.label' | trans }}
                        <dd>{{ 'organizations.show.members_count.count' | transchoice(organization.members|length) }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
